# --------------------------------------------------------------
# These dependencies are mandatory!
# All plugins will be used with their latest stable version,
# Then it is important that you have the O.S up to date.
# --------------------------------------------------------------

source 'https://rubygems.org'
ruby RUBY_VERSION

gem 'json', '~> 2.1.0'
gem 'pygments.rb', '~> 1.2.1'
gem 'bigdecimal', '~> 1.3.4'
gem 'rake', '~> 12.3.0'
gem 'jekyll', '~> 3.7.2'

group :jekyll_plugins do
  gem 'jekyll-coffeescript', '~> 1.1.0'
  gem 'jekyll-jsminify', '~> 0.3.0'
  gem 'jekyll-gist', '~> 1.5.0'
  gem 'jekyll-youtube', '~> 1.0.0'
  gem 'bootstrap', '~> 4.0.0'
  gem 'jekyll-tagging', '~> 1.1.0'
  gem 'jemoji', '~> 0.9.0'
  gem 'jekyll-email-protect', '~> 1.0.3'
  gem 'jektify', '~> 1.0.1'
end

# END
