# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

[*.{md,markdown}]
max_line_length = 100
insert_final_newline = false

[Makefile]
indent_style = tab
max_line_length = 100

[LICENSE]
indent_style = tab
indent_size = 4
