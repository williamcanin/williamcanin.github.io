# --------------------------------------------------------------
# These dependencies are mandatory!
# All plugins will be used with their latest stable version,
# Then it is important that you have the O.S up to date.
# --------------------------------------------------------------

source "https://rubygems.org"
ruby RUBY_VERSION

gem "jekyll"
gem "jekyll-paginate"
gem "pygments.rb"
gem "rake"
group :jekyll_plugins do
   gem "jekyll-feed"
   gem "jekyll-gist"
   gem "jekyll-youtube"
   gem "jekyll-tagging"
   gem "jemoji"
   gem "jekyll-email-protect"
   gem "jekyll-spotify-plugin"
end

gem 'tzinfo-data', platforms: [:mingw, :mswin, :x64_mingw, :jruby]
