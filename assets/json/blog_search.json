---
layout: none
---

{%- assign date_format = site.datelang.format -%}

[
  {% for post in site.posts %}
    {
      "title"    : "{{ post.title | escape }}",
      "tags"     : "{{ post.tags | join: ', ' }}",
      "url"      : "{{ site.baseurl }}{{ post.url }}",
      "date"     : "{% datelang post.date format:date_format %}"
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]
